@page
@model WebApp1.Pages.Friends.EditModel

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>Edit</h1>

<h4>Friend</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Friend.Id" />
            <div class="form-group">
                <label asp-for="Friend.UserId" class="control-label"></label>
                <select asp-for="Friend.UserId" class="form-control" asp-items="ViewBag.UserId"></select>
                <span asp-validation-for="Friend.UserId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Friend.CurrentFriendId" class="control-label"></label>
                <select asp-for="Friend.CurrentFriendId" class="form-control" asp-items="ViewBag.CurrentFriendId"></select>
                <span asp-validation-for="Friend.CurrentFriendId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
